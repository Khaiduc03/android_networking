<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/fpt_polytechnic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thread and ThreadPool"
        android:textAlignment="center"
        android:textColor="#EF5549"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnThread"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2196F3"
        android:text="Thread"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnThreadPool"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#2196F3"
        android:text="ThreadPool"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBai1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FF9800"
            android:text="Bài 1"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnBai2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#8BC34A"
            android:text="Bài 2"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnBai3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E91E63"
            android:text="Bài 3"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnBai4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#F44336"
            android:text="Bài 4"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnBai5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#009688"
            android:text="Bài 5"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnBai6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FFEB3B"
            android:text="Bài 6"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
